{
  "name": "vigo-desktop",
  "version": "0.1.0",
  "description": "Sistema PDV LB Brand - Desktop Application",
  "author": "Studio Vigo",
  "private": true,
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "electron .",
    "webhook:server": "node scripts/shopify-webhook-server.js",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:dmg": "electron-builder --mac dmg",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder -mwl"
  },
  "dependencies": {
    "express": "^4.19.2",
    "@supabase/supabase-js": "^2.43.2",
    "@tanstack/react-query": "^5.51.15",
    "@tauri-apps/api": "^1.5.6",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.0.3",
    "@tauri-apps/plugin-shell": "^2.0.3",
    "better-sqlite3": "^9.6.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.469.0",
    "papaparse": "^5.5.3",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "supabase": "^2.6.0",
    "tailwindcss": "^3.4.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@electron/rebuild": "^3.6.0",
    "@electron/typescript-definitions": "^9.1.5",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.9.8",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.10",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.studiovigo.pdv",
    "productName": "LB Brand - Sistema PDV",
    "icon": "imag/ICONE SISTEMA.png",
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.business",
      "identity": null,
      "hardenedRuntime": true,
      "entitlements": "./entitlements.mac.plist",
      "entitlementsInherit": "./entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150,
          "type": "file"
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "imag/ICONE SISTEMA.png",
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "imag/ICONE SISTEMA.png",
      "uninstallerIcon": "imag/ICONE SISTEMA.png",
      "installerHeaderIcon": "imag/ICONE SISTEMA.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
